<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mehrbod.a250movies.MovieFragment"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/the_matrix"
        android:adjustViewBounds="true"/>

    <EditText
        android:id="@+id/movieNameEditTextMovieFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:hint="Movie Name" />

    <Button
        android:id="@+id/findButtonMovieFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieNameEditTextMovieFragment"
        android:layout_centerHorizontal="true"
        android:onClick="onMovieFragmentFindButtonClickListener"
        android:layout_marginTop="40dp"
        android:text="Find" />
</RelativeLayout>
